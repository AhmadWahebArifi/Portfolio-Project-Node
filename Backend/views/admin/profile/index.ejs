<div class="row">
  <div class="col-12">
    <div class="admin-card animate-on-scroll">
      <div class="card-header bg-transparent border-0 py-3">
        <h5 class="mb-0">
          <i class="fas fa-user-circle me-2"></i> Your Profile
        </h5>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-lg-3 text-center mb-4 mb-lg-0">
            <div class="profile-avatar mx-auto">
              <div
                class="avatar-placeholder rounded-circle d-flex align-items-center justify-content-center"
                style="
                  width: 150px;
                  height: 150px;
                  background-color: var(--admin-light);
                  border: 3px solid var(--border-color);
                  margin: 0 auto;
                  position: relative;
                  overflow: hidden;
                  box-shadow: var(--shadow-lg);
                "
              >
                <% if (user.avatar) { %>
                <img
                  src="<%= user.avatar %>"
                  alt="<%= user.name %>"
                  style="width: 100%; height: 100%; object-fit: cover"
                />
                <% } else { %>
                <i class="fas fa-user fa-4x text-muted"></i>
                <% } %>
              </div>
              <div class="mt-3">
                <h4><%= user.name %></h4>
                <p class="text-muted">
                  <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                </p>
              </div>
            </div>
          </div>
          <div class="col-lg-9">
            <div class="profile-section">
              <h6 class="profile-section-header">
                <i class="fas fa-user me-2"></i> Personal Information
              </h6>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label fw-bold text-muted">Full Name</label>
                  <p class="form-control-plaintext fs-6"><%= user.name %></p>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label fw-bold text-muted"
                    >Email Address</label
                  >
                  <p class="form-control-plaintext fs-6"><%= user.email %></p>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label fw-bold text-muted">Role</label>
                  <p class="form-control-plaintext">
                    <span class="badge bg-primary rounded-pill"
                      ><%= user.role %></span
                    >
                  </p>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label fw-bold text-muted"
                    >Account Status</label
                  >
                  <p class="form-control-plaintext">
                    <% if (user.isActive) { %>
                    <span class="badge bg-success rounded-pill">Active</span>
                    <% } else { %>
                    <span class="badge bg-danger rounded-pill">Inactive</span>
                    <% } %>
                  </p>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label fw-bold text-muted"
                    >Member Since</label
                  >
                  <p class="form-control-plaintext fs-6">
                    <%= moment(user.createdAt).format('MMMM Do, YYYY') %>
                  </p>
                </div>
              </div>
            </div>

            <div class="profile-section">
              <h6 class="profile-section-header">
                <i class="fas fa-shield-alt me-2"></i> Security Settings
              </h6>
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label class="form-label fw-bold text-muted">Password</label>
                  <p class="form-control-plaintext fs-6">••••••••</p>
                </div>
                <div class="col-md-6 mb-3">
                  <label class="form-label fw-bold text-muted"
                    >Last Updated</label
                  >
                  <p class="form-control-plaintext fs-6">
                    <%= moment(user.updatedAt).format('MMMM Do, YYYY') %>
                  </p>
                </div>
              </div>
            </div>

            <div class="d-flex gap-2 mt-4 flex-wrap">
              <a
                href="/admin/profile/edit"
                class="btn btn-outline-primary rounded-pill"
              >
                <i class="fas fa-edit me-1"></i> Edit Profile
              </a>
              <a
                href="/admin/profile/change-password"
                class="btn btn-outline-secondary rounded-pill"
              >
                <i class="fas fa-key me-1"></i> Change Password
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Recent Activity -->
<div class="row mt-4">
  <div class="col-12">
    <div class="admin-card animate-on-scroll">
      <div class="card-header bg-transparent border-0 py-3">
        <h5 class="mb-0">
          <i class="fas fa-history me-2"></i> Recent Activity
        </h5>
      </div>
      <div class="card-body">
        <div class="text-center py-5">
          <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
          <p class="text-muted">No recent activity to display</p>
          <small class="text-muted">Your recent actions will appear here</small>
        </div>
      </div>
    </div>
  </div>
</div>
