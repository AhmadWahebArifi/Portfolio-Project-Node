<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | Admin Panel</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <style>
      :root {
        --admin-primary: #0f172a;
        --admin-secondary: #0ea5e9;
        --admin-accent: #f97316;
        --admin-success: #10b981;
        --admin-warning: #f59e0b;
        --admin-danger: #ef4444;
        --admin-dark: #0f172a;
        --admin-light: #f1f5f9;
        --sidebar-bg: #ffffff;
        --sidebar-text: #334155;
        --sidebar-hover: #f1f5f9;
        --header-bg: #ffffff;
        --border-color: #e2e8f0;
        --sidebar-width: 250px;
        --transition: all 0.3s ease;
        --shadow-sm: 0 1px 3px 0 rgba(0, 0, 0, 0.1),
          0 1px 2px 0 rgba(0, 0, 0, 0.06);
        --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
          0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1),
          0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1),
          0 10px 10px -5px rgba(0, 0, 0, 0.04);
        --radius-sm: 0.25rem;
        --radius: 0.5rem;
        --radius-lg: 0.75rem;
        --radius-xl: 1rem;
        --radius-full: 9999px;
      }

      /* Dark theme overrides for admin */
      :root[data-theme="dark"] {
        --admin-primary: #020617;
        --admin-secondary: #38bdf8;
        --admin-accent: #fb923c;
        --admin-success: #34d399;
        --admin-warning: #f59e0b;
        --admin-danger: #ef4444;
        --admin-dark: #e5e7eb;
        --admin-light: #0b1220;
        --sidebar-bg: #0b1324;
        --sidebar-text: #cbd5e1;
        --sidebar-hover: #0f172a;
        --header-bg: #0b1324;
        --border-color: #1f2a44;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        background-color: var(--admin-light);
        color: var(--admin-dark);
        overflow-x: hidden;
        padding-top: 70px; /* Account for fixed top bar on mobile */
      }

      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: "Poppins", sans-serif;
        font-weight: 700;
        letter-spacing: -0.025em;
      }

      /* Top Bar */
      .top-bar {
        background: var(--header-bg);
        padding: 1rem 1.5rem;
        margin-bottom: 0;
        box-shadow: var(--shadow);
        display: flex;
        justify-content: space-between;
        align-items: center;
        border: 1px solid var(--border-color);
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1020;
      }

      /* Sidebar */
      .sidebar {
        width: var(--sidebar-width);
        height: calc(100vh - 70px);
        background-color: var(--sidebar-bg);
        border-right: 1px solid var(--border-color);
        position: fixed;
        top: 70px;
        left: 0;
        z-index: 1000;
        transition: var(--transition);
        box-shadow: var(--shadow);
        overflow-y: auto;
      }

      .sidebar-header {
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
      }

      .sidebar-brand {
        color: var(--admin-primary);
        text-decoration: none;
        font-size: 1.25rem;
        font-weight: 800;
        display: flex;
        align-items: center;
      }

      .sidebar-brand i {
        margin-right: 0.5rem;
        color: var(--admin-secondary);
      }

      .sidebar-nav {
        padding: 1rem 0;
      }

      .nav-item {
        margin: 0.25rem 0;
      }

      .nav-link {
        color: var(--sidebar-text) !important;
        padding: 0.75rem 1.5rem;
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: var(--transition);
        border-left: 3px solid transparent;
        border-radius: 0 var(--radius-full) var(--radius-full) 0;
        margin: 0.25rem 0.5rem;
      }

      .nav-link:hover,
      .nav-link.active {
        color: var(--admin-secondary) !important;
        background-color: var(--sidebar-hover);
        border-left: 3px solid var(--admin-secondary);
        transform: translateX(5px);
      }

      .nav-link i {
        width: 20px;
        margin-right: 0.75rem;
      }

      /* Main Content */
      .main-content {
        margin-left: var(--sidebar-width);
        min-height: calc(100vh - 70px);
        padding: 2rem;
        background-color: var(--admin-light);
        margin-top: 70px;
      }

      /* Cards */
      .admin-card {
        background: var(--header-bg);
        border-radius: var(--radius-lg);
        border: none;
        box-shadow: var(--shadow);
        transition: var(--transition);
        border: 1px solid var(--border-color);
        margin-bottom: 1.5rem;
      }

      .admin-card:hover {
        box-shadow: var(--shadow-lg);
        transform: translateY(-2px);
      }

      .card-header {
        background: transparent;
        border-bottom: 1px solid var(--border-color);
        padding: 1rem 1.5rem;
        font-weight: 600;
      }

      /* Stats Cards */
      .stat-card {
        background: var(--header-bg);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        box-shadow: var(--shadow);
        text-align: center;
        transition: var(--transition);
        border: 1px solid var(--border-color);
      }

      .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
      }

      .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        margin: 0 auto 1rem;
      }

      .stat-number {
        font-size: 2rem;
        font-weight: 800;
        color: var(--admin-dark);
      }

      .stat-label {
        color: #64748b;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
      }

      /* Buttons */
      .btn {
        border-radius: var(--radius-full);
        padding: 0.6rem 1.5rem;
        font-weight: 600;
        transition: var(--transition);
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
      }

      .btn i {
        margin-right: 0.5rem;
      }

      .btn:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
      }

      .btn-admin-primary {
        background: linear-gradient(
          135deg,
          var(--admin-secondary) 0%,
          #0284c7 100%
        );
        color: white;
      }

      .btn-admin-primary:hover {
        background: linear-gradient(
          135deg,
          #0284c7 0%,
          var(--admin-secondary) 100%
        );
        color: white;
      }

      .btn-success {
        background: linear-gradient(
          135deg,
          var(--admin-success) 0%,
          #059669 100%
        );
        color: white;
      }

      .btn-success:hover {
        background: linear-gradient(
          135deg,
          #059669 0%,
          var(--admin-success) 100%
        );
        color: white;
      }

      .btn-warning {
        background: linear-gradient(
          135deg,
          var(--admin-warning) 0%,
          #d97706 100%
        );
        color: white;
      }

      .btn-warning:hover {
        background: linear-gradient(
          135deg,
          #d97706 0%,
          var(--admin-warning) 100%
        );
        color: white;
      }

      .btn-info {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
      }

      .btn-info:hover {
        background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
        color: white;
      }

      .btn-dark {
        background: linear-gradient(135deg, var(--admin-dark) 0%, #1e293b 100%);
        color: white;
      }

      .btn-dark:hover {
        background: linear-gradient(135deg, #1e293b 0%, var(--admin-dark) 100%);
        color: white;
      }

      /* Tables */
      .admin-table {
        background: var(--header-bg);
        border-radius: var(--radius-lg);
        overflow: hidden;
        box-shadow: var(--shadow);
        border: 1px solid var(--border-color);
      }

      .admin-table .table {
        margin-bottom: 0;
      }

      .admin-table .table th {
        background-color: #f8fafc;
        border-bottom: 1px solid var(--border-color);
        font-weight: 600;
        color: var(--admin-dark);
      }

      .table > :not(caption) > * > * {
        padding: 1rem 1.5rem;
      }

      /* Login Page */
      .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(
          135deg,
          var(--admin-primary) 0%,
          #1e293b 100%
        );
        padding: 1rem;
      }

      .login-card {
        background: var(--header-bg);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-xl);
        overflow: hidden;
        max-width: 450px;
        width: 100%;
        border: 1px solid var(--border-color);
        margin: 2rem auto;
      }

      .login-header {
        padding: 2rem 2rem 1rem;
        text-align: center;
        background: linear-gradient(
          135deg,
          var(--admin-primary) 0%,
          #1e293b 100%
        );
        color: white;
      }

      .login-body {
        padding: 2rem;
      }

      /* Form elements */
      .form-control,
      .form-select {
        border-radius: var(--radius);
        border: 2px solid var(--border-color);
        padding: 12px 15px;
        transition: var(--transition);
        background-color: var(--header-bg);
      }

      .form-control:focus,
      .form-select:focus {
        border-color: var(--admin-secondary);
        box-shadow: 0 0 0 0.2rem rgba(14, 165, 233, 0.25);
        outline: none;
      }

      .form-label {
        font-weight: 600;
        color: var(--admin-dark);
        margin-bottom: 0.5rem;
      }

      .input-group-text {
        background-color: var(--admin-light);
        border: 2px solid var(--border-color);
        border-right: none;
        border-radius: var(--radius) 0 0 var(--radius);
        color: var(--sidebar-text);
      }

      .form-control:not(:first-child) {
        border-left: none;
        border-radius: 0 var(--radius) var(--radius) 0;
      }

      /* Alerts */
      .alert {
        border-radius: var(--radius);
        border: none;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        box-shadow: var(--shadow);
      }

      .alert i {
        font-size: 1.25rem;
        margin-right: 0.75rem;
      }

      .alert-success {
        background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);
        color: #166534;
      }

      .alert-danger {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #991b1b;
      }

      .btn-close {
        position: absolute;
        right: 1rem;
        top: 1rem;
        background: none;
        border: none;
        font-size: 1.5rem;
        opacity: 0.7;
        transition: var(--transition);
      }

      .btn-close:hover {
        opacity: 1;
        transform: rotate(90deg);
      }

      /* Badges */
      .badge {
        padding: 0.5em 0.75em;
        border-radius: var(--radius-full);
        font-weight: 600;
      }

      .badge.bg-danger {
        background-color: var(--admin-danger) !important;
      }

      .badge.bg-warning {
        background-color: var(--admin-warning) !important;
        color: white;
      }

      .badge.bg-success {
        background-color: var(--admin-success) !important;
      }

      /* List group */
      .list-group-item {
        border-color: var(--border-color);
        transition: var(--transition);
      }

      .list-group-item:hover {
        background-color: var(--admin-light);
      }

      /* Mobile menu button */
      .mobile-menu-btn {
        display: none;
        background: none;
        border: none;
        color: var(--admin-dark);
        font-size: 1.5rem;
        padding: 0.25rem 0.5rem;
        border-radius: var(--radius);
      }

      .mobile-menu-btn:focus {
        box-shadow: 0 0 0 0.2rem rgba(14, 165, 233, 0.25);
        outline: none;
      }

      /* Animation */
      .animate-on-scroll {
        opacity: 0;
        transform: translateY(30px);
        transition: all 0.6s cubic-bezier(0.22, 0.61, 0.36, 1);
      }

      .animate-on-scroll.animated {
        opacity: 1;
        transform: translateY(0);
      }

      /* Comprehensive Responsive Design for Admin */
      /* Extra small devices (phones, less than 576px) */
      @media (max-width: 575.98px) {
        body {
          padding-top: 60px;
        }

        .sidebar {
          transform: translateX(-100%);
          width: 250px;
          height: calc(100vh - 60px);
          top: 60px;
        }

        .sidebar.show {
          transform: translateX(0);
        }

        .main-content {
          margin-left: 0;
          padding: 1rem;
          margin-top: 60px;
        }

        .mobile-menu-btn {
          display: block !important;
        }

        .top-bar {
          padding: 0.75rem 1rem;
          flex-direction: column;
          gap: 1rem;
          text-align: center;
          height: auto;
        }

        .top-bar .d-flex.align-items-center:last-child {
          width: 100%;
          justify-content: center;
        }

        .stat-card {
          margin-bottom: 1rem;
          padding: 1rem;
        }

        .admin-card .card-body {
          padding: 1rem;
        }

        .btn {
          padding: 0.5rem 1rem;
          font-size: 0.875rem;
        }

        .table-responsive {
          font-size: 0.875rem;
        }

        .table > :not(caption) > * > * {
          padding: 0.75rem 1rem;
        }

        .login-card {
          margin: 1rem;
        }

        .login-body {
          padding: 1.5rem;
        }

        .stat-number {
          font-size: 1.5rem;
        }

        .stat-label {
          font-size: 0.7rem;
        }
      }

      /* Small devices (landscape phones, 576px and up) */
      @media (min-width: 576px) and (max-width: 767.98px) {
        body {
          padding-top: 65px;
        }

        .sidebar {
          transform: translateX(-100%);
          height: calc(100vh - 65px);
          top: 65px;
        }

        .sidebar.show {
          transform: translateX(0);
        }

        .main-content {
          margin-left: 0;
          padding: 1.5rem;
          margin-top: 65px;
        }

        .mobile-menu-btn {
          display: block !important;
        }

        .top-bar {
          padding: 0.75rem 1.25rem;
          height: auto;
        }

        .stat-card {
          padding: 1.25rem;
        }
      }

      /* Medium devices (tablets, 768px and up) */
      @media (min-width: 768px) and (max-width: 991.98px) {
        body {
          padding-top: 70px;
        }

        .sidebar {
          width: 220px;
          height: calc(100vh - 70px);
          top: 70px;
        }

        .main-content {
          margin-left: 220px;
          padding: 1.75rem;
          margin-top: 70px;
        }

        .top-bar {
          padding: 0.875rem 1.375rem;
          height: auto;
        }

        .stat-card {
          padding: 1.375rem;
        }
      }

      /* Large devices (desktops, 992px and up) */
      @media (min-width: 992px) and (max-width: 1199.98px) {
        .sidebar {
          width: 240px;
        }

        .main-content {
          margin-left: 240px;
        }
      }

      /* Extra large devices (large desktops, 1200px and up) */
      @media (min-width: 1200px) {
        .sidebar {
          width: var(--sidebar-width);
        }

        .main-content {
          margin-left: var(--sidebar-width);
        }
      }

      /* General responsive improvements */
      @media (max-width: 991.98px) {
        .sidebar {
          transform: translateX(-100%);
        }

        .sidebar.show {
          transform: translateX(0);
        }

        .main-content {
          margin-left: 0;
        }

        .mobile-menu-btn {
          display: block !important;
        }

        .top-bar {
          padding: 0.75rem 1rem;
        }

        .d-none.d-lg-block {
          display: none !important;
        }

        .stat-number {
          font-size: 1.75rem;
        }

        .stat-label {
          font-size: 0.75rem;
        }

        .btn-group .btn {
          padding: 0.25rem 0.5rem;
          font-size: 0.875rem;
        }

        .card-header {
          padding: 0.75rem 1rem;
        }

        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
          line-height: 1.3;
        }

        /* Mobile sidebar adjustments */
        .sidebar-nav {
          padding: 0.5rem 0;
        }

        .nav-link {
          padding: 0.5rem 1rem;
          margin: 0.1rem 0.25rem;
        }
      }

      /* Responsive fixes for specific components */
      @media (max-width: 576px) {
        .d-flex.justify-content-between {
          flex-direction: column;
          gap: 0.75rem;
        }

        .btn-group {
          flex-wrap: wrap;
          gap: 0.5rem;
        }

        .btn-group .btn {
          margin-bottom: 0.25rem;
          margin-right: 0.25rem;
        }

        .pagination .page-link {
          padding: 0.5rem 0.75rem;
          font-size: 0.875rem;
        }

        .form-control,
        .form-select {
          font-size: 1rem;
        }

        .input-group {
          flex-direction: column;
        }

        .input-group .form-control:not(:first-child) {
          border-left: 2px solid var(--border-color);
          border-top: none;
          border-radius: 0 0 var(--radius) var(--radius);
        }

        .input-group .input-group-text {
          border-radius: var(--radius) var(--radius) 0 0;
          border-right: 2px solid var(--border-color);
          border-bottom: none;
        }

        .alert {
          padding: 0.75rem 1rem;
          font-size: 0.875rem;
        }

        .alert i {
          font-size: 1rem;
          margin-right: 0.5rem;
        }

        .btn-close {
          top: 0.75rem;
          right: 0.75rem;
          font-size: 1.25rem;
        }
      }
    </style>
  </head>
  <body>
    <% if (typeof layout === 'undefined' || layout !== 'none') { %>
    <!-- Top Bar -->
    <div class="top-bar">
      <div class="d-flex align-items-center">
        <button
          class="mobile-menu-btn me-3"
          onclick="toggleSidebar()"
          aria-label="Toggle sidebar"
        >
          <i class="fas fa-bars"></i>
        </button>
        <h4 class="mb-0"><%= title %></h4>
      </div>
      <div class="d-flex align-items-center">
        <button id="adminThemeToggle" class="btn btn-sm btn-outline-secondary me-3 rounded-pill px-3">
          <i class="fas fa-moon me-1"></i>
          <span class="theme-label">Dark</span>
        </button>
        <span class="text-muted me-3 d-none d-md-inline"
          >Welcome, <%= user ? user.name : 'Admin' %></span
        >
        <div class="dropdown">
          <button
            class="btn btn-outline-secondary dropdown-toggle"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <i class="fas fa-user"></i>
          </button>
          <ul class="dropdown-menu">
            <li>
              <a class="dropdown-item" href="/admin/profile"
                ><i class="fas fa-user-circle"></i> Profile</a
              >
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
              <form action="/admin/logout" method="POST" class="d-inline">
                <button type="submit" class="dropdown-item">
                  <i class="fas fa-sign-out-alt"></i> Logout
                </button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <a href="/admin" class="sidebar-brand">
          <i class="fas fa-cog"></i> Admin Panel
        </a>
      </div>

      <nav class="sidebar-nav">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a
              href="/admin"
              class="nav-link <%= currentPath === '/admin' ? 'active' : '' %>"
            >
              <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a
              href="/admin/profile"
              class="nav-link <%= currentPath === '/admin/profile' || currentPath.startsWith('/admin/profile/') ? 'active' : '' %>"
            >
              <i class="fas fa-user-circle"></i> Profile
            </a>
          </li>
          <li class="nav-item">
            <a
              href="/admin/projects"
              class="nav-link <%= currentPath.startsWith('/admin/projects') ? 'active' : '' %>"
            >
              <i class="fas fa-folder"></i> Projects
            </a>
          </li>
          <li class="nav-item">
            <a
              href="/admin/skills"
              class="nav-link <%= currentPath.startsWith('/admin/skills') ? 'active' : '' %>"
            >
              <i class="fas fa-chart-bar"></i> Skills
            </a>
          </li>
          <li class="nav-item">
            <a
              href="/admin/blog"
              class="nav-link <%= currentPath.startsWith('/admin/blog') ? 'active' : '' %>"
            >
              <i class="fas fa-blog"></i> Blog
            </a>
          </li>
          <li class="nav-item">
            <a
              href="/admin/contacts"
              class="nav-link <%= currentPath.startsWith('/admin/contacts') ? 'active' : '' %>"
            >
              <i class="fas fa-envelope"></i> Contacts
            </a>
          </li>
          <li class="nav-item mt-3">
            <a href="/" class="nav-link" target="_blank">
              <i class="fas fa-external-link-alt"></i> View Site
            </a>
          </li>
          <li class="nav-item">
            <form action="/admin/logout" method="POST" class="d-inline">
              <button
                type="submit"
                class="nav-link btn btn-link text-start w-100"
                style="border: none"
              >
                <i class="fas fa-sign-out-alt"></i> Logout
              </button>
            </form>
          </li>
        </ul>
      </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Flash Messages -->
      <% if (messages.success && messages.success.length > 0) { %> <%
      messages.success.forEach(function(message) { %>
      <div class="alert alert-success alert-dismissible fade show">
        <i class="fas fa-check-circle"></i> <%= message %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% }); %> <% } %> <% if (messages.error && messages.error.length > 0) { %>
      <% messages.error.forEach(function(message) { %>
      <div class="alert alert-danger alert-dismissible fade show">
        <i class="fas fa-exclamation-circle"></i> <%= message %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% }); %> <% } %>

      <!-- Page Content -->
      <%- body %>
    </div>
    <% } else { %> <%- body %> <% } %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // Theme: apply persisted theme early
      (function () {
        const saved = localStorage.getItem('admin-theme');
        const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = saved || (prefersDark ? 'dark' : 'light');
        if (theme === 'dark') {
          document.documentElement.setAttribute('data-theme', 'dark');
        } else {
          document.documentElement.removeAttribute('data-theme');
        }
      })();

      function toggleSidebar() {
        const sidebar = document.getElementById("sidebar");
        sidebar.classList.toggle("show");
      }

      // Auto-hide alerts
      setTimeout(() => {
        const alerts = document.querySelectorAll(".alert");
        alerts.forEach((alert) => {
          if (alert.querySelector(".btn-close")) {
            alert.querySelector(".btn-close").click();
          }
        });
      }, 5000);

      // Animate elements on scroll
      function updateAnimations() {
        const elements = document.querySelectorAll(
          ".animate-on-scroll:not(.animated)"
        );
        const windowHeight = window.innerHeight;

        elements.forEach((element) => {
          const elementTop = element.getBoundingClientRect().top;

          // Trigger animation when element is 15% from the bottom of the viewport
          if (elementTop < windowHeight * 0.85) {
            element.classList.add("animated");
          }
        });
      }

      // Use scroll event for animations
      window.addEventListener("scroll", updateAnimations);
      window.addEventListener("load", updateAnimations);
      window.addEventListener("resize", updateAnimations);

      // Close sidebar when clicking outside on mobile
      document.addEventListener("DOMContentLoaded", function () {
        const mobileMenuBtn = document.querySelector(".mobile-menu-btn");
        const sidebar = document.getElementById("sidebar");
        const toggleBtn = document.getElementById('adminThemeToggle');
        const label = toggleBtn ? toggleBtn.querySelector('.theme-label') : null;

        function updateToggleUi() {
          const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
          if (toggleBtn) {
            const icon = toggleBtn.querySelector('i');
            if (icon) icon.className = isDark ? 'fas fa-sun me-1' : 'fas fa-moon me-1';
            if (label) label.textContent = isDark ? 'Light' : 'Dark';
          }
        }

        if (toggleBtn) {
          updateToggleUi();
          toggleBtn.addEventListener('click', function () {
            const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
            if (isDark) {
              document.documentElement.removeAttribute('data-theme');
              localStorage.setItem('admin-theme', 'light');
            } else {
              document.documentElement.setAttribute('data-theme', 'dark');
              localStorage.setItem('admin-theme', 'dark');
            }
            updateToggleUi();
          });
        }

        if (mobileMenuBtn && sidebar) {
          document.addEventListener("click", function (event) {
            const isClickInsideSidebar = sidebar.contains(event.target);
            const isClickOnMenuBtn = mobileMenuBtn.contains(event.target);

            // Close sidebar if click is outside and sidebar is open
            if (
              !isClickInsideSidebar &&
              !isClickOnMenuBtn &&
              sidebar.classList.contains("show")
            ) {
              sidebar.classList.remove("show");
            }
          });
        }
      });
    </script>
  </body>
</html>
