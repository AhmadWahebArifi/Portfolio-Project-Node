<!-- Header Section -->
<section class="py-5 mt-5 bg-light">
  <div class="container">
    <div class="text-center animate-on-scroll">
      <h1 class="display-4 fw-bold">About Me</h1>
      <p class="lead">
        Get to know more about my journey, skills, and passion for development
      </p>
    </div>
  </div>
</section>

<!-- About Content -->
<section class="py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 animate-on-scroll">
        <div class="text-center mb-4 mb-lg-0">
          <img
            src="/ahmadpic.jpg"
            class="img-fluid rounded-circle shadow-lg"
            alt="Ahmad Waheb Arifi"
            style="max-width: 300px; border: 5px solid rgba(14, 165, 233, 0.2)"
          />
        </div>
      </div>
      <div class="col-lg-6 animate-on-scroll">
        <h2 class="display-5 fw-bold mb-4">Hi, I'm Ahmad Waheb Arifi!</h2>
        <p class="lead mb-4">
          I'm a passionate full-stack developer with a love for creating
          innovative web solutions that make a difference.
        </p>

        <p>
          With several years of experience in web development, I specialize in
          modern JavaScript frameworks, backend technologies, and database
          design. I enjoy tackling complex problems and turning ideas into
          reality through clean, efficient code.
        </p>

        <p>
          When I'm not coding, you can find me exploring new technologies,
          contributing to open-source projects, or sharing my knowledge through
          blog posts and tutorials.
        </p>

        <div class="d-flex gap-3 flex-wrap">
          <a href="/contact" class="btn btn-primary btn-lg rounded-pill">
            <i class="fas fa-envelope"></i> Let's Connect
          </a>
          <a
            href="/projects"
            class="btn btn-outline-primary btn-lg rounded-pill"
          >
            <i class="fas fa-folder-open"></i> View My Work
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Skills Section -->
<section class="py-5 bg-light">
  <div class="container">
    <div class="text-center mb-5 animate-on-scroll">
      <h2 class="display-4 fw-bold">My Skills</h2>
      <p class="lead">Technologies and tools I work with on a daily basis</p>
    </div>

    <!-- Skeleton loading for skills -->
    <div id="skills-skeleton" class="skills-skeleton" style="display: none">
      <% for(let i = 0; i < 3; i++) { %>
      <div class="mb-5">
        <div class="text-center mb-4">
          <div class="skeleton-text skeleton-title"></div>
        </div>
        <div class="row">
          <% for(let j = 0; j < 4; j++) { %>
          <div class="col-lg-6 mb-3">
            <div class="skeleton-card">
              <div class="skeleton-text mb-2"></div>
              <div class="skeleton-progress"></div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      <% } %>
    </div>

    <!-- Actual skills content -->
    <div id="skills-content">
      <% if (Object.keys(groupedSkills).length > 0) { %> <%
      Object.keys(groupedSkills).forEach(function(category) { %>
      <div class="mb-5 animate-on-scroll">
        <h3 class="text-center mb-4">
          <i
            class="fas fa-<%= category === 'frontend' ? 'laptop-code' : category === 'backend' ? 'server' : category === 'database' ? 'database' : category === 'devops' ? 'cloud' : 'tools' %> me-2"
          ></i>
          <%= category.charAt(0).toUpperCase() + category.slice(1).replace('-',
          ' ') %>
        </h3>

        <div class="row">
          <% groupedSkills[category].forEach(function(skill) { %>
          <div class="col-lg-6 mb-3">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <span class="fw-medium">
                <% if (skill.icon) { %>
                <i class="<%= skill.icon %>" <% if (skill.color) { %>
                  style="color: <%= skill.color %>;" <% } %>></i
                >
                <% } %> <%= skill.name %>
              </span>
              <span class="text-muted">
                <%= skill.proficiency %>% • <%= skill.yearsOfExperience %>
                year<%= skill.yearsOfExperience !== 1 ? 's' : '' %>
              </span>
            </div>
            <div class="progress mb-2" style="height: 10px">
              <div
                class="progress-bar"
                data-width="<%= skill.proficiency %>"
                data-color="<%= skill.color || '' %>"
                role="progressbar"
                aria-valuenow="<%= skill.proficiency %>"
                aria-valuemin="0"
                aria-valuemax="100"
              ></div>
            </div>
            <% if (skill.description) { %>
            <small class="text-muted"><%= skill.description %></small>
            <% } %>
          </div>
          <% }); %>
        </div>
      </div>
      <% }); %> <% } else { %>
      <div class="text-center py-5">
        <p class="text-muted">Skills information will be available soon.</p>
      </div>
      <% } %>
    </div>
  </div>
</section>

